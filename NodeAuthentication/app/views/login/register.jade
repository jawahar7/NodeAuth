extends ../loginlayout

block vars
	-var title = 'Register'

block body		
	div.row
		div.col-md-12
			div(class='col-md-6 col-md-offset-3')
				div(class='panel panel-default')
					div.panel-heading Register
					div(class='panel-body text-center recent-users-sec')
						form(method='post', class='form-horizontal', action='/Register')
							div.form-group
								label.control-label.col-md-4 Username:
								div.col-md-8
									input(class='form-control', type='text', name='username')
							div.form-group
								label.control-label.col-md-4 Password:
								div.col-md-8
									input(class='form-control', type='password', name='password')
							div.form-group
								div.col-sm-offset-4.col-sm-3
									input(type='submit', class='btn btn-default', style='float: left;', value='Register')
								div.col-sm-5
										a(href='/', class='pull-right') Back to Login									