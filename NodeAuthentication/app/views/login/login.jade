extends ../loginlayout

block vars
	-var title = 'Login'

block body
	div.container
		div.row
			div.col-md-12
				div(class='col-md-6 col-md-offset-3')
					div(class='panel panel-default')
						div.panel-heading Login
						div(class='panel-body text-center recent-users-sec')
							form(method='post', class='form-horizontal', action='/')
								div.form-group
									label.control-label.col-md-4 Username:
									div.col-md-8
										input(class='form-control', type='text', name='username')
								div.form-group
									label.control-label.col-md-4 Password:
									div.col-md-8
										input(class='form-control', type='password', name='password')
								div.form-group
									div.col-sm-offset-4.col-sm-4
										input(type='submit', class='btn btn-default', style='float: left;', value='Login')
									div.col-sm-4
										a(href='/Register', class='pull-right') Register										